<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Users</title>
    <!-- Agregar enlaces a estilos CSS -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Admin Panel - Users</h1>

    <!-- Sección para mostrar la lista de usuarios -->
    <section id="user-list">
        <!-- Aquí se mostrarán los usuarios -->
    </section>

    <!-- Formulario para agregar un nuevo usuario -->
    <section id="add-user-form">
        <h2>Agregar Usuario</h2>
        <form action="/api/users" method="post">
            <label for="first_name">Nombre:</label>
            <input type="text" id="first_name" name="first_name" required><br>
            <label for="last_name">Apellido:</label>
            <input type="text" id="last_name" name="last_name" required><br>
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" required><br>
            <label for="role">Rol:</label>
            <select name="role" id="role">
                <option value="user">Usuario</option>
                <option value="admin">Administrador</option>
                <option value="premium">Premium</option>
            </select><br>
            <button type="submit">Agregar Usuario</button>
        </form>
    </section>

    <!-- Formulario para modificar el rol de un usuario -->
    <section id="edit-user-form">
        <h2>Modificar Rol de Usuario</h2>
        <form action="/api/users/:uid/role" method="put">
            <label for="new_role">Nuevo Rol:</label>
            <select name="new_role" id="new_role">
                <option value="user">Usuario</option>
                <option value="admin">Administrador</option>
                <option value="premium">Premium</option>
            </select><br>
            <button type="submit">Actualizar Rol</button>
        </form>
    </section>

    <!-- Formulario para eliminar un usuario -->
    <section id="delete-user-form">
        <h2>Eliminar Usuario</h2>
        <form action="/api/users/:uid" method="delete">
            <button type="submit">Eliminar Usuario</button>
        </form>
    </section>

    <!-- Agregar enlaces a scripts JavaScript -->
    <script src="scripts.js"></script>
</body>
</html>
